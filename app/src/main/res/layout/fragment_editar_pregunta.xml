<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentEditarPregunta"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/edtArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/edtPreguntaTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pregunta"
            android:enabled="false"
            />

    <EditText
        android:id="@+id/edtOpcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Respuesta OpciÃ³n 1"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/edtRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Respuesta Correcta"
        android:enabled="false"
        />

        <CheckBox
            android:id="@+id/chkEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar" />

        <ImageButton
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert" />

        <ImageButton
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_save"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            />

    </LinearLayout>